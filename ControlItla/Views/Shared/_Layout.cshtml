<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/98e4080df4.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="navbar  navbar-fixed-top">
        <div class="container text-white">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Control del Itla", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    <li>@Html.ActionLink("Estudiantes", "Index", "Estudiante")</li>
                    <li>@Html.ActionLink("Profesores", "Index", "Profesor")</li>
                    <li>@Html.ActionLink("Asignatura", "Index", "Asignatura")</li>
                    <li>@Html.ActionLink("Asignar Asignatura", "Index", "ProfesorAsignatura")</li>
                    <li>@Html.ActionLink("Seleccionar Asignatura", "Index", "EstudianteMateria")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="navbar  navbar-inverse navbar-fixed-bottom ">
                <div class="container">
                    <p>Control del Itla</p>
                </div>
            </div>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
